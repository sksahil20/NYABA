<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lay_rel_img"
        android:layout_gravity="center_horizontal"
        android:padding="15dp"
        android:gravity="center"
        android:background="@drawable/bg_cir_ylo">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/bookingInfoUserImg"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/main_log_img" />

    </RelativeLayout>

    <TextView
        android:id="@+id/bookingInfoUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textStyle="normal"
        android:textSize="22sp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textColor="@color/light_yellow"
        android:layout_marginTop="6dp"/>

    <android.widget.Button
        android:id="@+id/info_to_book"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:background="@drawable/info_to_booking_btn"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginHorizontal="10dp"
        app:cardBackgroundColor="@color/primary_gray"
        app:cardCornerRadius="22dp"
        android:layout_marginTop="20dp"
        app:cardElevation="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>